<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.gmoon</groupId>
        <artifactId>querydsl-sql</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <groupId>com.gmoon.querydsl-sql</groupId>
    <artifactId>querydsl-sql-core</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>querydsl-sql-core</name>
    <description>querydsl-sql-core</description>
    <properties>
        <project.base.package>com.gmoon.querydslsql</project.base.package>

        <querydslsql.target.dir>${project.basedir}/target/generated-sources/java/querydslsql</querydslsql.target.dir>
        <querydslsql.target.package>${project.base.package}.core.querydslsql</querydslsql.target.package>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>

        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>${mysql-connector-java}</version>
        </dependency>

        <dependency>
            <groupId>com.querydsl</groupId>
            <artifactId>querydsl-core</artifactId>
            <version>${querydsl-core.version}</version>
        </dependency>

        <dependency>
            <groupId>com.querydsl</groupId>
            <artifactId>querydsl-jpa</artifactId>
            <version>${querydsl-core.version}</version>
            <classifier>jakarta</classifier>
        </dependency>

        <!-- querydsl sql -->
        <dependency>
            <groupId>com.querydsl</groupId>
            <artifactId>querydsl-sql</artifactId>
            <version>${querydsl-core.version}</version>
        </dependency>

        <dependency>
            <groupId>com.querydsl</groupId>
            <artifactId>querydsl-sql-spring</artifactId>
            <version>${querydsl-core.version}</version>
        </dependency>
        <!-- querydsl sql -->

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>com.gmoon</groupId>
            <artifactId>java-core</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.mysema.maven</groupId>
                <artifactId>apt-maven-plugin</artifactId>
                <version>1.1.3</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>process</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>target/generated-sources/java</outputDirectory>
                            <processor>com.querydsl.apt.jpa.JPAAnnotationProcessor</processor>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.querydsl</groupId>
                        <artifactId>querydsl-apt</artifactId>
                        <version>${querydsl-core.version}</version>
                        <classifier>jakarta</classifier>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>com.gmoon.querydsl-sql</groupId>
                <artifactId>querydsl-sql-codegen-maven</artifactId>
                <version>0.0.1-SNAPSHOT</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate-querydsl-sql-metamodel</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <sourceDirectory>${querydslsql.target.dir}</sourceDirectory>
                    <options>
                        <option>--jdbcDriver=${jdbc.driver}</option>
                        <option>--jdbcUrl=${jdbc.url}</option>
                        <option>--jdbcUser=${jdbc.username}</option>
                        <option>--jdbcPassword=${jdbc.password}</option>
                        <option>--schema=${db.schema}_querydslsql</option>
                        <option>--dialect=${hibernate.dialect}</option>
                        <option>--entityBasePackage=${project.base.package}</option>
                        <option>--targetFolder=${querydslsql.target.dir}</option>
                        <option>--targetPackage=${querydslsql.target.package}</option>
                        <option>--outputDirectory=${project.build.directory}/classes</option>
                    </options>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>mysql</groupId>
                        <artifactId>mysql-connector-java</artifactId>
                        <version>${mysql-connector-java}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>
